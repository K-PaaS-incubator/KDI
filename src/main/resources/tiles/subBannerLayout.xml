<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="subBannerLayout" template="/WEB-INF/jsp/tiles/subBannerLayout/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/jsp/tiles/defaultLayout/header.jsp" />
		<put-attribute name="section" value="" />
		<put-attribute name="footer" value="/WEB-INF/jsp/tiles/defaultLayout/footer.jsp" />
	</definition>
	<definition name="subBannerLayout/*" extends="subBannerLayout">
		<put-attribute name="section" value="/WEB-INF/jsp/{1}.jsp" />
	</definition>
	<definition name="subBannerLayout/*/*" extends="subBannerLayout">
		<put-attribute name="section" value="/WEB-INF/jsp/{1}/{2}.jsp" />
	</definition>
	<definition name="subBannerLayout/*/*/*" extends="subBannerLayout">
		<put-attribute name="section" value="/WEB-INF/jsp/{1}/{2}/{3}.jsp" />
	</definition>
	<definition name="subBannerLayout/*/*/*/*" extends="subBannerLayout">
		<put-attribute name="section" value="/WEB-INF/jsp/{1}/{2}/{3}/{4}.jsp" />
	</definition>
</tiles-definitions>